---
import Layout from '@layouts/Layout.astro'
import BackTo from '@components/backTo.astro'
---

<Layout title="404 not found">
  <main class='flex flex-col items-center font-sans font-medium'>
    <div>
      <div class="mt-40 border-b borderBase pb-2 mb-2">
        <p class="text-base">404 Not Found</p>
        <p>
          page:「<span class="text-base font-serif">{Astro.url.pathname}</span> 」does
          not seem to exist
        </p>
      </div>
      <BackTo backTo="" />
    </div>
  </main>
</Layout>
