---
import MaskHeader from '@components/header/headerMask.astro'
import Footer from '@components/footer.astro'
import BackTo from '@components/backTo.astro'
import Tab from '@components/tab.astro'
import '../styles/main.css'
interface Props {
  title?: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg">
  </head>
  <body class="themeBase">
    <MaskHeader />
    <main class="grid grid-cols-[1fr_min(65ch,90%)_1fr]">
      <article class="min-h-screen relative col-start-2 col-end-3">
        <div class="mt-20 mb-20 lg:mt-25 lg:mb-20 w-full">
          <div
            class:list={[
              {
                hidden: !['posts', 'projects'].includes(Astro.url.pathname.replace(/\//g, '')),
              },
            ]}
          >
            <BackTo backTo="" />
            <Tab />
          </div>
          <slot />
        </div>
        <Footer />
      </article>
    </main>
  </body>
</html>

<style is:global>
</style>
